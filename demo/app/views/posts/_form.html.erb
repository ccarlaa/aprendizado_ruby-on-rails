<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :titulo, style: "display: block; padding: 10px 0px 10px 0px" %>
    <%= form.text_field :titulo, style: "width: calc(100% - 10px); border: none; border-radius: 10px; padding: 10px 0px 10px 10px"%>
  </div>

  <div>
    <%= form.label :descrição, style: "display: block; padding: 10px 0px 10px 0px" %>
    <%= form.text_area :description, style: "min-width: calc(100% - 10px); max-width: calc(100% - 10px); border: none; border-radius: 10px; padding: 10px 0px 10px 10px"%>
  </div>

  <div class="button">
    <%= form.submit style: "padding: 10px; border: none; background-color: rgb(102, 102, 212); margin-top: 20px; border-radius: 10px; cursor: pointer"%>
  </div>
<% end %>
